<apex:page standardController="Account">
<apex:form >
	<apex:pageBlock title="Modifications des informations pour l'Account {!Account.Name}">
		<apex:pageBlockSection columns="1" >
			<apex:inputField value="{!Account.Name}"/>
			<apex:inputField value="{!Account.WebSite}"/>
			<apex:inputField value="{!Account.Email_de_son_entreprise__c}"/>
		</apex:pageBlockSection>
	</apex:pageBlock>
	<apex:commandButton action="{!save}" value="Sauver"/>
</apex:form>
</apex:page>